{
	"tabBar": {
		"selectedColor": "@tabSelectedColor",
		"backgroundColor": "@tabBgColor",
		"color": "@tabFontColor",
		"list": [{
				"text": "服务大厅",
				"pagePath": "pages/home/index",
				"iconPath": "@iconPathHome",
				"selectedIconPath": "@selectedIconPathHome"
			},
			{
				"text": "活动大厅",
				"pagePath": "pages/activity/index",
				"iconPath": "@iconPathActivity",
				"selectedIconPath": "@selectedIconPathActivity"
			},
			{
				"text": "个人中心",
				"pagePath": "pages/center/index",
				"iconPath": "@iconPathCenter",
				"selectedIconPath": "@selectedIconPathCenter"
			}
		]
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		//主页
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "武汉科技大学图书馆",
				// 支持下拉刷新
				"enablePullDownRefresh": true

			}
		},
		{
			"path": "pages/activity/index",
			"style": {
				"onReachBottomDistance": 100,
				"navigationBarTitleText": "活动"
			}
		},
		//个人中心
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}
	],
	"subPackages": [{
		"root": "page-home",
		"pages": [ {
			"path": "search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		}, {
			"path": "search-list",
			"style": {
				"navigationBarTitleText": "检索结果"
			}
		}, {
			"path": "detail",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "resourceWebsite",
			"style": {
				"navigationBarTitleText": "电子资源库"
			}
		}]
	}, {
		"root": "page-service",
		"pages": [{
			"path": "tsgview",
			"style": {
				"navigationBarTitleText": "图书馆"
			}
		}, {
			"path": "inner",
			"style": {
				"navigationBarTitleText": ""
			}
		}, {
			"path": "test",
			"style": {
				"navigationBarTitleText": ""
			}
		}, {
			"path": "chatbot",
			"style": {
				"navigationBarTitleText": ""
			}
		}]
	}, {
		"root": "page-center",
		"pages": [{
			"path": "aboutMe",
			"style": {
				"navigationBarTitleText": "关于"
			}
		}, {
			"path": "set",
			"style": {
				"navigationBarTitleText": "设置"
			}
		}, {
			"path": "mySubscribe",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "userInfo",
			"style": {
				"navigationStyle": "custom"
			}
		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "@navTxtStyle",
		"navigationBarTitleText": "武科大图书馆",
		"navigationBarBackgroundColor": "@navBgColor",
		"backgroundColor": "@navBgColor"
	},
	"uniIdRouter": {}
}